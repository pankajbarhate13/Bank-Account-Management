<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><%= pluralize(@account.errors.count, "Error") %> prohibited this account from being saved:</h4>
            </div>
            <div class="modal-body">
              <ul>
                <% @account.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  <% end %>

  <div class="account">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-3">
           <%= f.label :first_name, "First Name" %> 
        </div>
        <div class="col-md-4">
          <%= f.text_field :first_name, placeholder: "Enter First Name", required: true %>
        </div>
      </div>
    </div></br>

    <div class="row">
      <div class="col-md-12">
        <div class="col-md-3">
           <%= f.label :last_name, "Last Name" %> 
        </div>
        <div class="col-md-4">
          <%= f.text_field :last_name, placeholder: "Enter Last Name", required: true %>
        </div>
      </div>
    </div></br>

    <div class="row">
      <div class="col-md-12">
        <div class="col-md-3">
           <%= f.label :phone, "Phone No" %> 
        </div>
        <div class="col-md-4">
          <%= f.text_field :phone, placeholder: "Enter Phone No", required: true %>
        </div>
      </div>
    </div></br>

    <div class="row">
      <div class="col-md-12">
        <div class="col-md-3">
           <%= f.label :email, "Email" %> 
        </div>
        <div class="col-md-4">
          <%= f.text_field :email, placeholder: "Enter Email", required: true %>
        </div>
      </div>
    </div></br>

    <div class="row">
      <div class="col-md-12">
        <div class="col-md-3">
           <%= f.label :address, "Address" %> 
        </div>
        <div class="col-md-4">
          <%= f.text_area :address, placeholder: "Enter Address", required: true %>
        </div>
      </div>
    </div></br>

    
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="col-md-2">
          <div class="actions">
            <%= f.submit "Create Account", class:"btn btn-primary", style:"line-height: 2.8rem;" %>
          </div>
        </div>
        <div class="col-md-2">
          <%= link_to 'Accounts', accounts_path, class:"btn btn-primary",  style: "width: 100%;" %>
        </div>
      </div>
    </div>
  </div>

<% end %>

<script type="text/javascript">
    $(window).on('load',function(){
        $('#myModal').modal('show');
    });
</script>
